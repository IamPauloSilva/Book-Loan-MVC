@using BookLoanApp.Models
@model IEnumerable<BooksModel>

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success text-dark" role="alert">
        @TempData["MensagemSucesso"]
    </div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger text-dark" role="alert">
        @TempData["MensagemErro"]
    </div>
}


<div class="container mt-5">

    <div class="btn-box d-flex justify-content-between align-items-center mb-3">
        <h2>Books</h2>
        <a class="btn btn-success" asp-action="Register" asp-controller="Book"><i class="bi bi-plus-circle"></i> Register new book</a>
    </div>

    <table class="table table-hover" id="data-table">
        <thead>
            <tr>
                <th></th>
                <th style="text-align: center; vertical-align: middle;">Title</th>
                <th style="text-align: center; vertical-align: middle;">Author</th>
                <th style="text-align: center; vertical-align: middle;">Genre</th>
                <th style="text-align: center; vertical-align: middle;">Stock Quantity</th>
                <th style="text-align: center; vertical-align: middle;">Register Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @if (Model != null)
            {
                @if (Model.Count() > 0)
                {
                    @foreach (var livro in Model)
                    {

                        <tr>
                            @if (livro.Cape != null)
                            {
                                <td>

                                      <img src="/Images/@livro.Cape" style="width:50px; height:50px" />

                                </td>
                            }
                            else
                            {
                                <td>
                                </td>
                            }



                            <td style="text-align: center; vertical-align: middle;"><i class="bi bi-people"></i>@livro.Title</td>
                            <td style="text-align: center; vertical-align: middle;">@livro.Author</td>
                            <td style="text-align: center; vertical-align: middle;">@livro.Genre</td>
                            <td style="text-align: center; vertical-align: middle;"><i class="bi bi-envelope-at"></i>@livro.StockAmount</td>
                            <td style="text-align: center; vertical-align: middle;"><i class="bi bi-calendar"></i>@livro.RegisterDate</td>
                            <td>
                                <a class="btn btn-warning" asp-action="Details" asp-controller="Book" asp-route-id="@livro.Id"><i class="bi bi-file-earmark-zip"></i>Details</a>
                                <a class="btn btn-info" asp-action="Edit" asp-controller="Book" asp-route-id="@livro.Id"><i class="bi bi-pencil"></i>Edit</a>
                            </td>
                        </tr>
                    }

                }
                else
                {
                    <tr><td colspan="6" class="text-center">No books registered!</td></tr>
                }

            }






        </tbody>
    </table>


</div>